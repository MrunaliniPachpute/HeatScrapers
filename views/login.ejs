<link rel="stylesheet" href="/css/signUp.css" />

<div class="signup-container">
    <h2>Login User Account</h2>
    <form action="/user/login" method="POST">
      <div class="form-group">
        <label for="email">Email Address</label>
        <input type="email" id="email" name="email" placeholder="Noah@gmail.com" required />
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" name="password" placeholder="Noah@123" required />
      </div>

      <button type="submit" class="signup-btn">Login</button>
      <p class="login-link">
        Don't have an account? <a href="/user/signUp">Sign Up</a>
      </p>
    </form>
  </div>